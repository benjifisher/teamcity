#! /bin/sh
## {{ ansible_managed }}

# Set path to data.
export TEAMCITY_DATA_PATH="{{ app_data_path }}"
# Set the java path. Kluge?
export JAVA_HOME={{ java_path }}

# Carry out specific functions when asked to by the system
case "$1" in
  start)
    echo "Starting teamcity"
    start-stop-daemon --start -c {{ app_user }} --exec {{ app_path }}/bin/runAll.sh start
    ;;
  stop)
    echo "Stopping teamcity"
    start-stop-daemon --start -c {{ app_user }} --exec {{ app_path }}/bin/runAll.sh stop
    ;;
  *)
    echo "Usage: /etc/init.d/teamcity {start|stop}"
    exit 1
    ;;
esac

exit 0
